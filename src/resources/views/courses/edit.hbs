<div class="mt-4">
    <h3>Edit courses</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="description" class="form-control" id="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" id="name" >
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Level</label>
            <input type="text" name="level" class="form-control" value="{{course.level}}" id="level" >
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">video id</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId" >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>